<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">
        
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="IMAGE HERE" />

        <RelativeLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/location_name"
                style="@style/Title"
                tools:text="Big Ben" />

            <TextView
                android:id="@+id/address"
                style="@style/Description"
                android:layout_below="@id/location_name"
                tools:text="Parliament Square, Westminster, St Margaret Street, London SW1A 0AA" />

            <TextView
                android:id="@+id/opening_time"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_below="@id/address"
                android:gravity="top"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                tools:text="Opening times: 6:00 - 20:00" />

            <TextView
                android:id="@+id/website"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_below="@id/opening_time"
                android:gravity="top"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                tools:text="http://www.londontown.com/LondonInformation/Sights_and_Attractions/Big_Ben/5b15/" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>